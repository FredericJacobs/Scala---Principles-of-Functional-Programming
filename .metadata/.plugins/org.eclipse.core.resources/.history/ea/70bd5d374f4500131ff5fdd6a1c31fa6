object PlayWithScala {
  println("Welcome to the Scala worksheet")
  val numbers = List(1,2,3)
  numbers.reverse
  
  type Occurences = List[(Char, Int)]
  type Word = String
  def wordsOccurences(w: Word): Occurences = w.toList.groupBy(x => x.toLower).map(_ match {case (letter,matchedLetters) => (letter, matchedLetters.length)}).toList.sortWith(_._1 < _._1)
  wordsOccurences("HELLO WORLD")
                                                  
  def sentenceOccurenceList(w: String): Occurences = {
  	w.toList 
  }
}