object PlayWithScala {
  println("Welcome to the Scala worksheet")       //> Welcome to the Scala worksheet
  val numbers = List(1,2,3)                       //> numbers  : List[Int] = List(1, 2, 3)
  numbers.reverse                                 //> res0: List[Int] = List(3, 2, 1)
  
  type Occurences = List[(Char, Int)]
  type Word = String
  def wordsOccurences(w: Word): Map[Any, Any] = w.toList.groupBy(x => x.toLower).map(_ match {case (letter,matchedLetters) => (letter, matchedLetters.length)}).toList
                                                  //> wordsOccurences: (w: PlayWithScala.Word)Map[Any,Any]
  wordsOccurences("HELLO WORLD")                  //> res1: Map[Any,Any] = Map(e -> 1,   -> 1, l -> 3, h -> 1, r -> 1, w -> 1, o -
                                                  //| > 2, d -> 1)
}