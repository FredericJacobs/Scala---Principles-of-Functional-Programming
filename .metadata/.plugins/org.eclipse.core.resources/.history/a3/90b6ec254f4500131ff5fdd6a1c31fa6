object PlayWithScala {
  println("Welcome to the Scala worksheet")       //> Welcome to the Scala worksheet
  val numbers = List(1,2,3)                       //> numbers  : List[Int] = List(1, 2, 3)
  numbers.reverse                                 //> res0: List[Int] = List(3, 2, 1)
  
  type Occurences = List[(Char, Int)]
  type Word = String
  def wordsOccurences(w: Word): Occurences = w.toList.groupBy(x => x.toLower).map(_ match {case (letter,matchedLetters) => (letter, matchedLetters.length)}).toList.sortWith(_._1 < _._1)
                                                  //> wordsOccurences: (w: PlayWithScala.Word)PlayWithScala.Occurences
  wordsOccurences("HELLO WORLD")                  //> res1: PlayWithScala.Occurences = List(( ,1), (d,1), (e,1), (h,1), (l,3), (o,
                                                  //| 2), (r,1), (w,1))
                                                  
  def sentenceOccurenceList(w: String) 
}